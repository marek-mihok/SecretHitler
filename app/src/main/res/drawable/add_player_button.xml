            <corners android:radius="8dp" />
            <solid android:color="@color/secretWhite" />
            <size android:width="144dp" android:height="32dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="8dp" />
            <solid android:color="@color/secretGray" />
            <size android:width="144dp" android:height="32dp" />
        </shape>
    </item>
</selector>