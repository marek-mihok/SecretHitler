<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_playerCell_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/backgroundYellow"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/item_player_playerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/futura_bold"
                android:text="MMMMMMMMMM"
                android:textColor="@color/addPlayer_item"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/item_player_roleImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:tint="@color/addPlayer_item"
                app:srcCompat="@drawable/img_chancellor"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"/>

            <ImageView
                android:id="@+id/item_player_notHitler"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:tint="@color/addPlayer_item"
                app:srcCompat="@drawable/ic_finger"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>