<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/settings_item_primaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sh_font"
            android:textColor="@color/secretGray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/settings_item_secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rokkitt_regular"
            android:textColor="@color/secretGray"
            android:visibility="gone"/>
    </LinearLayout>

    <Switch
        android:id="@+id/settings_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:padding="16dp"
        android:theme="@style/SettingsSwitch" />

</LinearLayout>