<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/otherFascistsView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border_dark_brown"
    app:layout_constraintEnd_toEndOf="@+id/revealButton"
    app:layout_constraintStart_toStartOf="@id/revealButton"
    app:layout_constraintTop_toTopOf="@+id/frameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/custom_border_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"

            android:gravity="center"
            android:minHeight="52dp">

            <TableRow
                android:id="@+id/hitler_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_bold"
                    android:text="@string/hitler"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hitlerNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rokkitt_regular"
                    android:text="@string/question_mark_placeholder"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/facsistOneTextView" />
            </TableRow>

            <TableRow
                android:id="@+id/fascist_one_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_bold"
                    android:text="@string/other_fascists"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/facsistOneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rokkitt_regular"
                    android:text="@string/question_mark_placeholder"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:id="@+id/fascist_two_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_regular"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/facsistTwoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rokkitt_regular"
                    android:text="@string/question_mark_placeholder"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/otherFascists_Image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/skull_image"
            app:srcCompat="@drawable/ic_skull" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
