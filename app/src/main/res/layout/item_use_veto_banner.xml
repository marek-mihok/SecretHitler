<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/veto_banner_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        app:cardBackgroundColor="@color/backgroundYellow"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/veto_banner_shortText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sh_font"
                    android:text="USE VETO?"
                    android:textAlignment="center"
                    android:textColor="@color/addPlayer_item"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/veto_banner_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tint="@color/addPlayer_item"
                    app:srcCompat="@drawable/ic_arrow_back_black_18dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/addPlayer_item"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_bold"
                    android:textColor="@color/addPlayer_item"
                    android:text="Do you wish to veto this agenda?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_regular"
                    android:text="To successfully apply veto president must agree."
                    android:textColor="@color/addPlayer_item"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt_regular"
                    android:text="When veto is successfully applied election tracker advances by one. (Because government is inactive)"
                    android:textColor="@color/addPlayer_item"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>