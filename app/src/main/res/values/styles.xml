<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundOrange</item>
        <item name="colorPrimaryDark">@color/secretGray</item>
        <item name="colorAccent">@color/secretWhite</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="ButtonMainMenu">
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:fontFamily">@font/rokkitt_bold</item>
        <item name="android:textColor">@color/backgroundOrange</item>
        <item name="android:textSize">@dimen/fontSizeMenu</item>
    </style>


    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>
